<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %>: <%= dose.description %>
        <%= link_to "delete",
            dose_path(dose),
            method: :delete,
            data: {confirm: "You sure?"}%>
    </li>
  <% end %>
</ul>

<%= render 'doses/new', cocktail: @cocktail, dose: @dose %>

<%= link_to "All Cocktails", cocktails_path %>
