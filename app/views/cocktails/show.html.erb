<div class="container">
  <h1 class="text-center m-3">Show cocktail</h1>
  <br>
  <h2><%= @cocktail.name %></h2>
  <div class="row"><% @cocktail.doses.each do |dose| %>
    <div class="card col-sm-6"><%= dose.ingredient.name %>: <%= dose.description %> <%= link_to 'delete', dose_path(dose), method: :delete %></div>
    <% end %>
  </div>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%#= f.association :ingredient %>
    <div class="form-inputs">
      <%= f.input :ingredient, collection: Ingredient.all, include_hidden: false %>
      <%= f.input :description %>
    </div>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to all Cocktails", cocktails_path %>
</div>
