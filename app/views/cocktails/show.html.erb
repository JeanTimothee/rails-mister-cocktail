<div class="container">
  <h1 class="text-center m-3">Show cocktail</h1>
  <br>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    <h2><%= @cocktail.name %></h2>
    <div class="row"><% @cocktail.doses.each do |dose| %>
      <div class="card"><%= dose.ingredient.name %>: <%= dose.description %> <%= link_to 'delete', dose_path(dose), method: :delete %></div>
      <% end %>
    </div>
  </div>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="form-inputs">
      <%= f.association :ingredient %>
      <%#= f.input :ingredient, collection: Ingredient.all, input_html: { class: "multiple-select", multiple: true },include_hidden: false %>
      <%= f.input :description %>
    </div>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to all Cocktails", cocktails_path %>
</div>
