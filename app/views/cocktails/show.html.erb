<h1>Show cocktail</h1>
<br>
<h2><%= @cocktail.name %></h2>
<ul><% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %>: <%= dose.description %> <%= link_to 'delete', dose_path(dose), method: :delete %></li>
  <% end %>
</ul>

<%= simple_form_for [@cocktail, @dose] do |f| %>
<%#= f.association :ingredient %>
<%= f.input :ingredient, collection: Ingredient.all, input_html: { class: "multiple-select", multiple: true }, include_hidden: false %>
<%= f.input :description %>
<%= f.submit %>
<% end %>

<%= link_to "Back to all Cocktails", cocktails_path %>
