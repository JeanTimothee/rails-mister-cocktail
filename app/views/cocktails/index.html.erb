<div class="container">
  <div class="banner">
    <h1 class="title">Cocktails Index</h1>
    <%= link_to "Add a Cocktail", new_cocktail_path%>
  </div>
  <div class="cocktails-index">
    <ul class="cocktails-list">
      <% @cocktails.each do |cocktail| %>
      <div class="cocktail-box">
        <%= link_to cocktail_path(cocktail) do %>
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <h4><%=cocktail.name%></h4>
          <% cocktail.doses.each do |dose| %>
            <p><%= dose.ingredient.name %></p>
          <% end %>
        <% end %>
      </div>
      <% end %>
    </ul>
  </div>
</div>
